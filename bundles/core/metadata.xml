<?xml version="1.0" encoding="UTF-8"?>
<iPOJO>
  <component className="uk.co.talkingcode.ipojorc.core.Bot"
    architecture="true">
    <requires field="commands" required="false"/>
    <callback transition="validate" method="starting" />
    <callback transition="invalidate" method="stopping" />
		<provides>
		  <property name="channel" field="channel" mandatory="true"/>
  	  <property name="server" field="server" mandatory="true"/>
     	<property name="nick" field="nick" mandatory="true"/>
		</provides>
  </component>
  <instance component="uk.co.talkingcode.ipojorc.core.Bot">
  	<property name="channel" value="#tropic"/>
  	<property name="server" value="irc.tropic.org.uk"/>
  	<property name="nick" value="codbot"/>
  </instance>
</iPOJO>
